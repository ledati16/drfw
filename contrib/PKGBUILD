# Maintainer: Your Name <your.email@example.com>
pkgname=drfw-git
pkgver=r336.76fd4fc
pkgrel=1
pkgdesc="A minimal, safe, stateful nftables GUI for desktop Linux"
arch=('x86_64')
url="https://github.com/ledati16/drfw"
license=('MIT')
depends=('nftables' 'gcc-libs' 'glibc')
makedepends=('git' 'cargo')
optdepends=(
    'polkit: for pkexec elevation in GUI environments'
    'sudo: for sudo elevation in terminal environments'
)
provides=('drfw')
conflicts=('drfw')
source=("${pkgname%-git}::git+${url}.git")
sha256sums=('SKIP')

pkgver() {
    cd "${pkgname%-git}"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
    cd "${pkgname%-git}"
    export RUSTUP_TOOLCHAIN=stable
    cargo fetch --locked --target "$(rustc --print host-tuple)"
}

build() {
    cd "${pkgname%-git}"
    export RUSTUP_TOOLCHAIN=stable
    export CARGO_TARGET_DIR=target
    cargo build --frozen --release
}

check() {
    cd "${pkgname%-git}"
    export RUSTUP_TOOLCHAIN=stable
    # Debug mode intentional: catches overflow checks and debug_assert!() failures
    DRFW_NFT_COMMAND="$PWD/tests/mock_nft.sh" cargo test --frozen
}

package() {
    cd "${pkgname%-git}"
    install -Dm755 target/release/drfw "$pkgdir/usr/bin/drfw"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 contrib/drfw.desktop "$pkgdir/usr/share/applications/drfw.desktop"
    for size in 16 24 32 48 64 128 256 512; do
        install -Dm644 "contrib/icons/drfw-${size}.png" "$pkgdir/usr/share/icons/hicolor/${size}x${size}/apps/drfw.png"
    done
    install -Dm644 contrib/drfw.service "$pkgdir/usr/lib/systemd/system/drfw.service"
    install -Dm644 contrib/50-drfw.rules "$pkgdir/usr/share/polkit-1/rules.d/50-drfw.rules"
}
